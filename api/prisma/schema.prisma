// -------------------------------
// Prisma Schema for jewelry_db
// PostgreSQL
// -------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------
// User Table
// -------------------------------
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String // required (isliye upsert me dena padega)
  phone     String? // optional
  createdAt DateTime @default(now())

  orders Order[]
}

// -------------------------------
// Category Table
// -------------------------------
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  products Product[]
}

// -------------------------------
// Product Table
// -------------------------------
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  image       String?
  createdAt   DateTime @default(now())

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

// -------------------------------
// Order Table
// -------------------------------
model Order {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  totalAmount Float    @default(0)
  status      String   @default("pending")
  shipping    Json?
  notes       String?

  userId Int
  user   User @relation(fields: [userId], references: [id])

  items OrderItem[]
}

// -------------------------------
// Order Item Table
// -------------------------------
model OrderItem {
  id        Int    @id @default(autoincrement())
  productId String
  name      String
  image     String?
  quantity  Int    @default(1)
  price     Float
  meta      Json?

  orderId Int
  order   Order @relation(fields: [orderId], references: [id])
}
